pipeline {
    agent any
    stages {
        stage('compile') {
            steps { 
                sh 'mvn compile'
            }
        }
        stage('build') {
            steps { 
                sh 'mvn package'
            }
        }
          post {
       always {
          junit(
        allowEmptyResults: true,
        testResults: '*/test-reports/.xml'
        )
      }
    }
}
